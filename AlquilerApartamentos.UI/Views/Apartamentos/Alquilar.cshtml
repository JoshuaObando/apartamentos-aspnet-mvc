@model ExamenLenguajes.Model.Alquiler

@{
    ViewData["Title"] = "Alquilar Apartamento";
}

<h2>Alquilar Apartamento</h2>

<form asp-action="Alquilar" method="post">
    <input type="hidden" name="id" value="@ViewBag.ApartamentoId" />

    <div class="form-group">
        <label asp-for="Identificacion">Identificación del Inquilino</label>
        <input asp-for="Identificacion" class="form-control" required />
        <span asp-validation-for="Identificacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NombreInquilino">Nombre del Inquilino</label>
        <input asp-for="NombreInquilino" class="form-control" required />
        <span asp-validation-for="NombreInquilino" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaInicio">Fecha de Inicio</label>
        <input asp-for="FechaInicio" type="date" class="form-control" required />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantidadMeses">Cantidad de Meses</label>
        <input asp-for="CantidadMeses" type="number" class="form-control" min="1" required />
        <span asp-validation-for="CantidadMeses" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Confirmar alquiler</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
